# GitLab Configuration
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=glpat-xxxxxxxxxxxxxxxxxxxx
GITLAB_FROM_EMAIL=gitlab@mg.gitlab.com

# Service URLs (for Docker, use container names; for local, use localhost)
GITLAB_SERVER_URL=http://gitlab-server:8001
LLM_SERVER_URL=http://llm-server:8002

# Gmail Configuration
GMAIL_EMAIL=your_email@gmail.com
GMAIL_APP_PASSWORD=xxxx xxxx xxxx xxxx

# Ollama Configuration
# Use host.docker.internal to access Ollama running on host machine
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=codellama

# Redis Configuration (for persistent email tracking)
REDIS_URL=redis://redis:6379/0
USE_REDIS=true

# Monitoring Configuration
CHECK_INTERVAL=60
LOG_LEVEL=INFO

# MR Processing Configuration
MR_STATES_TO_PROCESS=opened

# LLM Prompt Limits
MAX_FILES_IN_PROMPT=999999
MAX_DIFF_LINES_PER_FILE=999999

# Fallback: JSON file storage (used if Redis unavailable)
PROCESSED_EMAILS_DB=.processed_emails.json
